<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="mx.iteso.is705419.tarea02.ActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bicycle_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/bicycle_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vista"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vista"
                android:layout_marginLeft="12dp"
                android:text="@string/titulo"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/vista"
                android:layout_marginRight="20dp"
                android:background="@drawable/like_image" />

            <TextView
                android:id="@+id/color_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/color"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_text"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/gray" />

                <RadioButton
                    android:id="@+id/radio_brown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown" />

                <RadioButton
                    android:id="@+id/radio_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pink" />

                <RadioButton
                    android:id="@+id/radio_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black" />

            </RadioGroup>

            <Button
                android:id="@+id/boton_m"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_not_pressed"
                android:text="@string/mediana"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/boton_s"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/boton_m"
                android:background="@drawable/button_not_pressed"
                android:text="@string/pequeÃ±a"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/boton_l"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/boton_s"
                android:background="@drawable/button_not_pressed"
                android:text="@string/grande"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/boton_xl"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/boton_l"
                android:background="@drawable/button_not_pressed"
                android:text="@string/extra_grande"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/descripcion_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/boton_m"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/descripcion"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descripcion_texto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descripcion_titulo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/descripcion_texto"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/measurement_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descripcion_texto2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/measurement"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descripcion_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/measurement_titulo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/measurement_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add_cart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/descripcion_texto"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/add_cart_text"
                android:background="@drawable/button_compras"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
